window {
  background: transparent;
}

#outer-box {
  background: #{{base00}};
  border: 1px solid #{{base01}};
  border-radius: 15px;
  padding: 10px;
  /*box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25);*/
}

#input, #input:focus {
  margin-bottom: 5px;
  border-radius: 5px;
  background: #{{base00}};
  border: transparent;
  outline: transparent;
  box-shadow: none;
  padding: 5px;
  margin-left: 15px;
}

#inner-box {
  border-radius: 5px;
  padding: none;
}

#entry, #selected, #unselected, #entry:focus {
  padding: 0;
  border-radius: 5px;
  border: transparent;
  outline: transparent;
}

#entry:selected {
  /*background: rgba({{base05-rgb-r}}, {{base05-rgb-g}}, {{base05-rgb-b}}, 0.09);*/
  background: #{{base02}};
}

#img {
  padding-right: 10px;
}

