(defwindow confirm [screen thing action]
  :monitor screen
  :geometry (geometry
    :anchor "center"
  )
  :stacking "fg"
  :exclusive "false"
  :focusable "ondemand"
  :class "confirm"
  (box
    :orientation "vertical"
    :space-evenly "false"
    :class "confirm-box"
    :spacing 15
    :halign "center"
    (separator)
    (label :text "${thing}")
    (box
      :orientation "horizontal"
      :space-evenly "true"
      :spacing 10
      (button
        :class "confirm-button bold"
        :onclick "hyprctl reload; ${action}; eww --config ${dir} close confirm"
        :tooltip "(y)"
        "Yes"
      )
      (button
        :class "confirm-button bold"
        :onclick "hyprctl reload; eww --config ${dir} close confirm"
        :tooltip "(n)"
        "No"
      )
    )
  )
)
